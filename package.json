{
  "name": "beaver-staff",
  "version": "1.0.0",
  "descriptiocn": "A small project of architecture to avoid to start a project from the very beginning using React + Redux in a simple way.",
  "author": "Carlos Abdalla",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm-run-all --parallel start-dash",
    "begin": "babel-node tools/server.js",
    "start-dash": "webpack-dashboard -- babel-node tools/server.js",
    "start-message": "babel-node tools/start-message.js",
    "test": "mocha --reporter progress tools/test-setup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "history": "^4.7.2",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "toastr": "^2.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-register": "^6.26.0",
    "babylon": "^6.18.0",
    "colors": "^1.1.2",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "eslint": "^4.9.0",
    "eslint-plugin-async-await": "^0.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "expect": "^21.2.1",
    "express": "^4.16.2",
    "file-loader": "^1.1.5",
    "husky": "^0.14.3",
    "jsdom": "^11.3.0",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "open": "^0.0.5",
    "prettier": "^1.7.4",
    "react-hot-loader": "^3.1.1",
    "redux-immutable-state-invariant": "^2.1.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dashboard": "^1.0.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.3",
    "webpack-hot-middleware": "^2.20.0"
  }
}
